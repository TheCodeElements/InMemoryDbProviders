<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="6dp"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment"

    >

    <LinearLayout
        android:id="@+id/providerNotFound"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:visibility="gone"
        tools:visibility="visible"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_red_light"
            android:textColor="@android:color/black"
            android:gravity="center_horizontal"
            android:text="Povider not found"
            >

        </TextView>


    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">


        <Button
            android:id="@+id/getVersionName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:padding="0dp"

            android:text="Get versionName"

            >

        </Button>

        <TextView
            android:id="@+id/versionName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_weight="0.5"

            tools:text="toolsText">

        </TextView>


    </LinearLayout>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">


        <Button
            android:id="@+id/getVersionCode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:padding="0dp"

            android:text="Get versionCode"

            >

        </Button>


        <TextView
            android:id="@+id/versionCode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_weight="0.5"
            tools:text="toolsText">

        </TextView>


    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/tracking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tracking" />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/tipps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipps und Hinweise" />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/retryPolicyQuick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DefaultRetryPolicy schnell" />

    </LinearLayout>


</LinearLayout>